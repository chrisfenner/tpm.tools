{
  "compilerOptions": {
    /* Language and Platform */
    "target": "es6",
    "module": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Paths */
    "rootDir": ".",
    "outDir": "./dist",

    /* Module Resolution */
    "moduleResolution": "node",

    /* Emit */
    "declaration": true, // useful for creating a package of your generated types
    "sourceMap": true,

    /* Because of bundling, we import a css file for side effects and it's not a real module. */
    "noUncheckedSideEffectImports": false
  },
  "include": ["ts/*", "proto/*.ts"]
  // "exclude": ["node_modules"]
}
